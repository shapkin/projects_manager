%h2 New Project

%form
  .form-group
    %label{ for: 'name' } Name
    %input.form-control{ type: 'text', id: 'name', data: { ng_model: 'project.name' }}

  .form-group
    %label{ for: 'description'} Description
    %textarea.form-control{ id: 'description', rows: '10', data: { ng_model: 'project.description' }}

  %button.btn.btn-default{ type: 'submit', data: { ng_click: 'createProject(project)' }} Add
